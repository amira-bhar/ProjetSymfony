{% extends "base.html.twig" %}

{% block title %}L'AtelierGourmand - Modification de la recette
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">Modification de la recette</h1>

		<form name="recipe" method="post" enctype="multipart/form-data">

			<div class="form-group">
				<strong>{{ form_label(form.name) }}</strong>
				{{ form_widget(form.name) }}
				<div class="form-error">
					{{ form_errors(form.name) }}
				</div>
			</div>


			<div class="form-group">
				<strong>{{ form_label(form.time) }}</strong>
				{{ form_widget(form.time) }}
				<div class="form-error">
					{{ form_errors(form.time) }}
				</div>
			</div>

			<div class="form-group">
				<strong>{{ form_label(form.nbPeople) }}</strong>
				{{ form_widget(form.nbPeople) }}
				<div class="form-error">
					{{ form_errors(form.nbPeople) }}
				</div>
			</div>

			<div class="form-group">
				<strong>{{ form_label(form.difficulty) }}</strong>
				{{ form_widget(form.difficulty) }}
				<div class="form-error">
					{{ form_errors(form.difficulty) }}
				</div>
			</div>

			<div class="form-group">
				<strong>{{ form_label(form.description) }}</strong>
				{{ form_widget(form.description) }}
				<div class="form-error">
					{{ form_errors(form.description) }}
				</div>
			</div>

			<div class="form-group">
				<strong>{{ form_label(form.price) }}</strong>
				{{ form_widget(form.price) }}
				<div class="form-error">
					{{ form_errors(form.price) }}
				</div>
			</div>

			<div class="form-check mt-4">
				{{ form_widget(form.isFavorite) }}
				{{ form_label(form.isFavorite) }}
			</div>
            
            <div class="form-check mt-4">
				{{ form_widget(form.isPublic) }}
				{{ form_label(form.isPublic) }}
			</div>

			<strong>{{ form_row(form.ingredients) }}</strong>

			<div class="form-image">
				{{ form_row(form.imageFile) }}
			</div>

			{{ form_row(form._token) }}

			<button type="submit" id="recipe_submit" name="recipe[submit]" class="btn btn-primary mt-4">Modifier ma recette</button>

		</form>
	</div>
{% endblock %}
